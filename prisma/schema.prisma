datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String @unique
  amount Int    @default(0)
}

model Judge {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String @unique
  amount    Int
  totalBank Int    @default(2000000)
}
